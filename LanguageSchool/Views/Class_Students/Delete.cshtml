@model LanguageSchool.Models.Class_Students

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bu kaydı silmek istediğinize emin misiniz?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Ders Adı</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class.Name)
        </dd>

        <dt>
            <label>İsim</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.Firstname)
            @Html.DisplayFor(model => model.Student.Lastname)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> 
            @Html.ActionLink("Geri Dön", "Index","",new{@class="btn btn-primary"})
        </div>
    }
</div>
