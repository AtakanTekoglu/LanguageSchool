@model LanguageSchool.Models.SocialOpportunity

@{
    ViewBag.Title = "AddAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Otobüs Bilgisi Ekleme Sayfası</h2>

<form method="post" class="form-group">
    <div>
        <label>Hangi şube için ekleme yapacaksınız?</label>
        @Html.DropDownListFor(m => m.Branch.Id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top: 10px;">Sosyal fırsat için başlık giriniz:</label>
        <input type="text" class="form-control" name="Title" placeholder="Örn:15B" />
    </div>
    <div>
        <label style="margin-top: 10px;">Sosyal fırsatı tanımlayınız:</label>
        <input type="text" class="form-control" name="Description" />
    </div>
    <div style="margin-top: 10px; ">
        <button class="btn btn-success">Sosyal Fırsat Ekle</button>
    </div>
</form>