@model IEnumerable<LanguageSchool.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğrenci Görüntüleme Sayfası</h2>

<p>
    @Html.ActionLink("Öğrenci Ekle", "Create","",new {@class="btn btn-success"})
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
               <label>Doğum Tarihi</label>
            </th>
            <th>
                <label>Memleket</label>
            </th>
            <th>
                <label>Ad</label>
            </th>
            <th>
                <label>Soyad</label>
            </th>
            <th>
                <label>Email</label>
            </th>
            <th>
                <label>Telefon</label>
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate.Day)/
                    @Html.DisplayFor(modelItem => item.Birthdate.Month)/
                    @Html.DisplayFor(modelItem => item.Birthdate.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Ödeme Planı", "Finance", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @*@Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })*@
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

</table>
