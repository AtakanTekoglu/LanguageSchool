@using System.Web.UI.WebControls
@model LanguageSchool.Models.Staff
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>

    <link href="~/Content/boots/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">



                                    @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                                    {

                                        <div class="form-group">
                                            <label class="small mb-1" for="inputUsername">Kullanıcı Adı</label>
                                            @Html.TextBoxFor(m=>m.Username,new {@class="form-control py-4",placeholder="Kullanıcı adı giriniz",required="required"})
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputPassword">Şifre</label>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control py-4",placeholder = "Şifre giriniz",required="required",type="password"})
                                        </div>
                                        <div class="form-group">
                                            <h6 style="color: red">@ViewBag.message</h6>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                                        </div>
                                    }

                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="/Registers/Create/">Hesabın yok mu? Kayıt ol!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/Content/boots/dist/js/scripts.js"></script>
</body>
</html>
